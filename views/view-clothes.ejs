<%- include('includes/head.ejs') %>

<div class="container flex justify-between mx-auto my-4 px-2 py-8">
    <div class="flex justify-center items-center flex-col border-2 px-10 pt-4">
        <div class="border rounded-full text-center my-4 mx-2">
            <select class="bg-transparent py-2 px-20 appearance-none cursor-pointer">
                <option>Category</option>
                <option>Category 1</option>
                <option>Category 2</option>
                <option>Category 3</option>
                <option>Category 4</option>
            </select>
        </div>
        <div class="border rounded-full text-center my-4 mx-2">
            <select class="bg-transparent py-2 px-20 appearance-none cursor-pointer">
                <option>Type</option>
                <option>Type 1</option>
                <option>Type 2</option>
                <option>Type 3</option>
                <option>Type 4</option>
            </select>
        </div>
        <div class="border rounded-full text-center my-4 mx-2">
            <select class="bg-transparent py-2 px-20 appearance-none cursor-pointer">
                <option>Size</option>
                <option>Size 1</option>
                <option>Size 2</option>
                <option>Size 3</option>
                <option>Size 4</option>
            </select>
        </div>
        <div class="border rounded-full text-center my-4 mx-2">
            <select class="bg-transparent py-2 px-20 appearance-none cursor-pointer">
                <option>Color</option>
                <option>Color 1</option>
                <option>Color 2</option>
                <option>Color 3</option>
                <option>Color 4</option>
            </select>
        </div>
        <div class="my-4">
            <span class="font-bold text-xl">Filter by Genres</span>
            <form class="flex flex-col m-5">
                <div class="my-2 font-bold text-lg" >
                    <input type="radio" id="genres1" class="p-4"/>
                    <label for="genres1" class="ml-4">Genres 1</label>
                </div>
                <div class="my-2 font-bold text-lg" >
                    <input type="radio" id="genres2" class="p-4"/>
                    <label for="genres2" class="ml-4">Genres 2</label>
                </div>
                <div class="my-2 font-bold text-lg" >
                    <input type="radio" id="genres3" class="p-4"/>
                    <label for="genres3" class="ml-4">Genres 3</label>
                </div>
            </form>
        </div>
        <div class="my-4">
            <span class="font-bold text-xl">Filter by Brand</span>
            <form class="flex flex-col m-5">
                <div class="my-2 font-bold text-lg" >
                    <input type="radio" id="brand1" class="p-4"/>
                    <label for="brand1" class="ml-4">Brand 1</label>
                </div>
                <div class="my-2 font-bold text-lg" >
                    <input type="radio" id="brand2" class="p-4"/>
                    <label for="brand2" class="ml-4">Brand 2</label>
                </div>
                <div class="my-2 font-bold text-lg" >
                    <input type="radio" id="brand3" class="p-4"/>
                    <label for="brand3" class="ml-4">Brand 3</label>
                </div>
            </form>
        </div>
    </div>
    <div class="grid gap-y-5 gap-x-4 grid-cols-3 w-[70rem] p-6 border-2 overflow-scroll h-[73rem]">
        <% item.forEach(item=>{ %>
        <div class="border text-center">
            <div class="p-2">
                <img src="<%= item.img %>" alt="<%= item.imgAlt %>" class="w-96 h-96 m-2 object-contain">
            </div>
            <div class="font-mono">
                <div class="font-light my-2">
                    <span><%= item.clothesName %></span>
                </div>
                <div class="text-orange-700 font-bold">
                    <span>â‚¹<%= item.price %></span>
                </div>
            </div>
            <div class="flex justify-center">
                <a href="/<%= url %>/<%= item._id %>" class="inline-block m-4 p-2 border-2 rounded-xl font-bold hover:bg-gray-300">view</a>
                <form class="add-cart" accept="/add-cart">
                    <button type="submit" class="inline-block m-4 p-2 border-2 rounded-xl font-bold hover:bg-gray-300">Add Cart</button>
                </form>
            </div>
        </div>
        <%}); %>
    </div>
</div>

<%- include('includes/footer.ejs') %>

<script>
    const addCart = document.querySelectorAll('.add-cart');
    addCart.forEach(el => {
        el.addEventListener('click', e => {
            console.log('click');
            e.preventDefault();
        })
    })
</script>


<%- include('includes/end.ejs') %>
