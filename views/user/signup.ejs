<%- include('../includes/head.ejs') %>

<section class="my-20 text-center">
    <div class="p-16 w-[75rem] mx-auto drop-shadow-lg shadow-2xl shadow-indigo-500/50">
        <div class="font-extralight mb-4">
            <p class="text-4xl">signup</p>
        </div>
        <div class="my-8 text-left">
            <form action="/signup" method="post" class="flex flex-col gap-y-8" id="signup">
                <label for="name" class="font-serif text-xl">Full Name</label>
                <input type="text" name="name" id="name" class="border border-black p-4" placeholder="Full Name">
                <label for="email" class="font-serif text-xl">Email</label>
                <input type="email" name="email" id="email" class="border border-black p-4" placeholder="username or email">
                <label for="user-name" class="font-serif text-xl">UserName</label>
                <input type="text" name="user-name" id="user-name" class="border border-black p-4" placeholder="username or email">
                <label for="user-password" class="font-serif text-xl">Password</label>
                <input type="password" name="user-password" id="user-password" class="border border-black p-4" placeholder="password">
                <label for="conform-password" class="font-serif text-xl">Conform-Password</label>
                <input type="password" name="conform-password" id="conform-password" class="border border-black p-4" placeholder="conform password">
                <div class="flex gap-x-3">
                    <input type="checkbox" name="admin" id="admin" value="admin">
                    <label for="admin">Create Business Account</label>
                </div>
                <p>
                    Already have an account?
                    <a href="/login" class="text-red-700 mx-2">Login</a>
                    here
                </p>
                <div class="flex justify-around">
                    <button type="submit" class="px-8 py-4 text-lg font-serif bg-red-400 text-white hover:bg-red-500">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</section>

<%- include('../includes/footer.ejs') %>

<script src="/js/signup.js"></script>

<%- include('../includes/end.ejs') %>